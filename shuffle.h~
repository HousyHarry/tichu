#include <time.h>
#include <stdlib.h>
#include <algorithm> 

void shuffle(card Stapel[])
{
    int random1, random2;
    time_t t;

    time(&t);

  for (int i = 1; i < 1000; ++i) 
  {
    srand(t+i);
    random1 = rand() % sizeof(Stapel);
    random2 = rand() % sizeof(Stapel);
    std::swap(Stapel[random1], Stapel[random1]);
  }
};
